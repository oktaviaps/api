def restart():
	if request.remote_addr != '165.232.165.67':
		return "NGAPAIN LU KONTOL!!!"
	else:
		try:
			subprocess.check_output(f'systemctl restart paradis && systemctl restart drawit', shell=True)
		except:
			return "error"
		else:
			return "done"
		
