@app.route("/adduser/exp")
def add_user_exp():
	#if request.headers.get("AUTH_KEY") == auth:
	if request.remote_addr != '165.232.165.67':
		return "NGAPAIN LU KONTOL!!!"
	else:
		u = request.args.get("user")
		p = request.args.get("password")
		exp = request.args.get("exp")
		lim = request.args.get("limitip")
		try:
			subprocess.check_output(f'useradd -e `date -d "{exp} days" +"%Y-%m-%d"` -s /bin/false -M {u}', shell=True)
			subprocess.check_output(f'usermod --password $(echo {p} | openssl passwd -1 -stdin) {u}', shell=True)
			subprocess.check_output(f'echo "### {u} `date -d "{exp} days" +"%Y-%m-%d"` {p} {lim}" >> /etc/.sshdb' , shell=True)
		except:
			return "error"
		else:
			return "success"


@app.route("/renew")
def renew():
	if request.remote_addr != '165.232.165.67':
		return "NGAPAIN LU KONTOL!!!"
	else:
	#if request.headers.get("AUTH_KEY") == auth:
		u = request.args.get("user")
		p = request.args.get("password")
		exp = request.args.get("exp")
		try:
			subprocess.check_output(f'userdel -f {u}', shell=True)
		except Exception as e:
			print(str(e))
			return "error"
		else:
			subprocess.check_output(f'useradd -e `date -d "{exp} days" +"%Y-%m-%d"` -s /bin/false -M {u}', shell=True)
			subprocess.check_output(f'usermod --password $(echo {p} | openssl passwd -1 -stdin) {u}', shell=True)
			return "success"

@app.route("/trial-ssh")
def trial_ssh():
    if request.remote_addr != '165.232.165.67':
        return "NGAPAIN LU KONTOL!!!"
    
    try:
        # Menjalankan script shell dan menangkap outputnya
        exp = "60\n"  # Pastikan untuk menambahkan newline
        process = subprocess.Popen(
            ["trlsh"],  # Ganti dengan path script yang benar
            stdin=subprocess.PIPE, 
            stdout=subprocess.PIPE, 
            stderr=subprocess.PIPE, 
            shell=False
        )
        
        # Mengirimkan input ke proses
        out, _ = process.communicate(input=exp.encode())  # Kirim input ke stdin
        
        # Decode output dari script shell ke string
        output = out.decode("utf-8").strip()

        # Parsing hasil output (misalnya: "RESULT:Trial-ABCD,1,60")
        if "RESULT:" in output:
            result = output.split("RESULT:")[1]
            username, password, expired = result.split(",")

            # Mengembalikan hasil ke user
            return f"Username: {username}, Password: {password}, Expired: {expired} minutes"
        else:
            return "Failed to get the trial details."

    except Exception as e:
        return str(e)

